generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id               Int               @id @default(autoincrement())
    username         String            @unique
    password         String
    role             String            @default("User")
    createdAt        DateTime          @default(now())
    age              Int
    weight           Float
    height           Float
    exercises        Exercise[]
    workoutTemplates WorkoutTemplate[]
}

model Exercise {
    id               Int               @id @default(autoincrement())
    name             String
    user             User              @relation(fields: [userId], references: [id])
    userId           Int
    muscleGroup      String
    favorite         Boolean
    workoutTemplates WorkoutTemplate[]
}

model WorkoutTemplate {
    id          Int        @id @default(autoincrement())
    name        String
    user        User       @relation(fields: [userId], references: [id])
    userId      Int
    description String
    lastUse     DateTime?
    exercises   Exercise[]
}
